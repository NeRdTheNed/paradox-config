{
  "schemaVersion": 1,
  "id": "pconfig",
  "version": "1.0.0",

  "name": "Paradox Config",
  "description": "A Kotlin-based configuration mod for Minecraft.",
  "authors": [
    "Me!"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "redstoneparadox.paradoxconfig.ParadoxConfigKt::init"
    ]
  },
  "mixins": [
    "pconfig.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "fabric-language-kotlin": "*"
  },
  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "pconfig": ["redstoneparadox.paradoxconfig.example.MyConfig"]
  }
}
