{
  "schemaVersion": 1,
  "id": "pconfig",
  "version": "0.3.0-alpha",

  "name": "Paradox Config",
  "description": "A Kotlin-based configuration api for Minecraft mods.",
  "authors": [
    "RedstoneParadox"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/RedstoneParadox/paradox-config"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      {
        "adapter": "kotlin",
        "value": "redstoneparadox.paradoxconfig.ParadoxConfig"
      }
    ]
  },
  "mixins": [
    "pconfig.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "fabric-language-kotlin": "*"
  },
  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "pconfig": ["redstoneparadox.paradoxconfig.example.MyConfig"]
  }
}
